            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="2"

            android:text="CE" />



        <Button

            android:id="@+id/btnPercent"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:text="%" />



        <Button

            android:id="@+id/btnDiv"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:text="/" />



